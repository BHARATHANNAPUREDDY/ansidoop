<!-- Put site-specific property overrides in this file. -->

<configuration>
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://{{ hostvars[groups.leader[0]].ansible_fqdn }}:9000</value>
    <description>
      URI of the default file system.

      The URI scheme determines the config property (fs.SCHEME.impl)
      naming the FileSystem implementation class.  The uri's authority
      is used to determine the host, port, etc. for a filesystem.
    </description>
  </property>

  <property>
    <name>hadoop.tmp.dir</name>
    <value>/tmp</value>
  </property>

</configuration>
